@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
.action
	color white
	margin-right 0.5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(0,0,0,0.3)
.author
	color gris_claro
.border-bottom //oocss classes
	border-bottom 1px solid gris_claro
.button-menu
	color gris_oscuro
	left 0.5em
	margin-top -10px
	position absolute
	top 50%
.center-block
	margin 0 auto
.center-text
	text-align center
.close-icon
	color gris_claro
	font-size 1.2em
	position absolute
	right 0.5em
	top 0.5em
.container
	padding 1.4rem
	font-size 0
	text-align center
.header
	height 3.5em
	//a
		///display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.left
	float left
.name
	color gris_oscuro
.menu
	display none
.padding
	padding 1em
.padding-tb
	padding 1em 0
.playing
	//display none
	&.small
		width 20em
.progress
	margin 1em 0
	position relative
	.min 
	.max
		font-size 0.8em
		position absolute
		top -5px
	.max
		right 0
	.min
		left 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
.relative //oocss classes
	position relative
.right
	float right
.right-text 
	text-align right
.round
	border-radius 50%
	overflow hidden
.search-icon
	color gris_claro
	left 0.5em
	position absolute
	top 0.8em
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	p
		margin 0.5em 0
.song:nth-child(even)
	margin-right 0
.wrap
	width 1000px


@media screen and (min-width:480px)
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
	.song 
		&:nth-child(even)
			margin-right 1em

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.avatar
		height 38px
		width 38px
	.button-menu
		display none
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		background white
		overflow hidden
		padding 1.3em 0
	.menu
		display block
		//background gris_mas_claro
		overflow hidden
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.username
		color gris_claro
		margin-left 0.5em
		position relative
		top 9px
		&:after
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left 0.4em
